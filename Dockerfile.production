#!/usr/bin/env python3
"""
Simple production entry point for Render
"""
import os
import uvicorn

if __name__ == "__main__":
    # Configurar puerto para Render
    port = int(os.getenv("PORT", "10000"))
    
    print(f"ðŸš€ Starting server on port {port}")
    
    uvicorn.run(
        "main:app",
        host="0.0.0.0",
        port=port,
        reload=False,
        log_level="info",
        access_log=True
    )